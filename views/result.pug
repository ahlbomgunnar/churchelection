doctype html
html
  head
    title GunnarAhlbom
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js')
    script(src='https://code.jquery.com/jquery-1.11.1.js')
    script(src='/socket.io/socket.io.js')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js")
    script(src="https://use.fontawesome.com/e58e7af208.js")
    style type='text/css'
      include css/main.css
    script
      include js/queryhandler.js
  body

    div(class="container")

      div(class="row")
        div(class="menu-accent dark-primary-color")
        nav(class="default-primary-color text-primary-color")
          div(class="nav-wrapper")
            a(href="/", class="brand-logo heavy-shadow") Church Election
            a(href="#", data-activates="mobile-navbar", class="button-collapse") 
              i(class="fa fa-bars", aria-hidden="true")

            ul(id="nav-mobile", class="right hide-on-med-and-down light-shadow")
              li
                a(href="/") Home
              li
                a(href="/vote") Vote
              li(class="active")
                a(href="/result") Result

            ul(class="side-nav", id="mobile-navbar")
              li
                a(href="/") Home
              li
                a(href="/vote") Vote
              li(class="active")
                a(href="/result") Result

      div(class="row")
        div(id='chartcontainer')

      div(class="row")

        span(class="marginalizer")

          h5 Settings

          a(class='dropdown-button btn', href='#', data-activates='chartTypeDropdown') Chart Type
          ul(id='chartTypeDropdown', class='dropdown-content')
            li
              a(href="#", onclick="switchChart('bar', 'unfiltered')") Bar
            li
              a(href="#", onclick="switchChart('horizontalBar', 'unfiltered')") Horizontal Bars
            li
              a(href="#", onclick="switchChart('doughnut', 'filtered')") Doughnut
            li
              a(href="#", onclick="switchChart('pie', 'filtered')") Pie
            li
              a(href="#", onclick="switchChart('radar', 'filtered')") Radar
            li
              a(href="#", onclick="switchChart('polarArea', 'filtered')") Polar Area

        span(class="marginalizer")
          a(class='dropdown-button btn', href='#', data-activates='legendPositionDropdown') Legend Position
          ul(id='legendPositionDropdown', class='dropdown-content')
            li
              a(href="#", onclick="switchLegendPosition('top')") Top
            li
              a(href="#", onclick="switchLegendPosition('left')") Left
            li
              a(href="#", onclick="switchLegendPosition('right')") Right
            li
              a(href="#", onclick="switchLegendPosition('bottom')") Bottom

  script
      include js/charthandler.js
